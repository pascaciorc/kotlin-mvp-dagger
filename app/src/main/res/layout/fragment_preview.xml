<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.preview.PreviewFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cover_height"
                android:background="@drawable/ic_cover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.CardView
                android:id="@+id/profile_img_holder"
                android:layout_width="@dimen/profile_img_size"
                android:layout_height="@dimen/profile_img_size"
                app:cardCornerRadius="@dimen/profile_img_size_round"
                app:cardElevation="@dimen/profile_img_elevation"
                android:layout_centerHorizontal="true"
                app:layout_constraintEnd_toEndOf="@+id/cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cover"
                android:layout_marginTop="@dimen/profile_img_top_margin">
            <ImageView
                    android:id="@+id/profile_img"
                    android:layout_height="@dimen/profile_img_size"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_img_holder"
                app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>